generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(uuid())
  createAt DateTime   @default(now())
  name     String
  userName String     @unique
  password String
  status   UserStatus @default(PENDING)
  role     UserRole
}

enum UserStatus {
  ACTIVE
  INACTIVE
  PENDING
}

enum UserRole {
  ADMIN
  MANAGER
  USER
}
